<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="CustomTheme" parent="android:Theme.Holo.Light">
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="label_standar">
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:textSize">17dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingLeft">0dp</item>
    <item name="android:paddingRight">20dp</item>
    <item name="android:layout_gravity">center_vertical</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">10dp</item>
    <item name="android:layout_marginRight">10dp</item>
    <item name="android:layout_marginBottom">10dp</item>
  </style>

  <style name="spinner_standar">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">30dp</item>
    <item name="android:layout_marginRight">10dp</item>
    <item name="android:layout_marginLeft">10dp</item>
    <item name="android:layout_marginBottom">40dp</item>
    <item name="android:layout_gravity">center_vertical</item>
    <item name="android:maxWidth">400dp</item>
    <item name="android:maxHeight">400dp</item>
    <item name="android:textColor">#696969</item>
    <item name="android:textSize">15dp</item>
    <item name="android:background">#FFECECEC</item>
    <item name="android:popupBackground">#FFECECEC</item>
  </style>

  <style name="spinner_standar_text">
    <item name="android:background">#FFECECEC</item>
    <item name="android:layout_gravity">center_vertical</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:paddingRight">10dp</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:textColor">#696969</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textSize">15dp</item>
  </style>

</resources>