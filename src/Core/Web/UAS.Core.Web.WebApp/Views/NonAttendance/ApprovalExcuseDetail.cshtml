@using System.IO;
@using UAS.Core.DAL.Common.Model;

@{
    var excuse = ViewBag.Excuse as ExcuseApprovalView;
    var attachments = ViewBag.Attachments as IEnumerable<Attachment>;
}

@functions{
    public static string GetClassification(ExcuseApprovalView excuse)
    {
        if (excuse != null)
        {
            return excuse.ClassificationExcuse;
        }
        return string.Empty;
    }

    public static string GetJustification(ExcuseApprovalView excuse)
    {
        if (excuse != null)
        {
            return excuse.ExcuseJustification;
        }
        return string.Empty;
    }

    public static string GetObservation(ExcuseApprovalView excuse)
    {
        if (excuse != null)
        {
            return excuse.ExcuseObservation;
        }
        return string.Empty;
    }

    public static string DisplayObservation(ExcuseApprovalView excuse)
    {
        if (excuse != null)
        {
            return string.IsNullOrEmpty(excuse.ExcuseObservation) ? "none" : "block";
        }
        return "none";
    }
}
<div class="modal inmodal" id="modal-approval-excuse" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title text-uppercase">Detalle de la Excusa</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div id="wizard" class="wizard-big">
                        <h1 class="text-uppercase"> General</h1>
                        <fieldset>
                            <div class="row">
                                <div class="col-lg-12">
                                    <form id="form-basic-information">
                                        <div class="form-group">
                                            <label>Clasificación</label>
                                            <input type="text" class="form-control" name="Classification" readonly value="@GetClassification(excuse)" />
                                        </div>
                                        <div class="form-group" style="display: @DisplayObservation(excuse)">
                                            <label>Observación</label>
                                            <textarea class="form-control" rows="5" name="Observation" readonly>@GetJustification(excuse)</textarea>
                                        </div>
                                        <div class="form-group">
                                            <label>Justificación</label>
                                            <textarea class="form-control" rows="10" name="Justification" readonly>@GetObservation(excuse)</textarea>
                                        </div>
                                    </form>
                                </div>
                            </div>

                        </fieldset>
                        <h1 class="text-uppercase">Adjuntos</h1>
                        <fieldset>
                            <div class="row">
                                <div class="col-lg-12">
                                    <table id="grid-attachment-excuse" class="table table-striped table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th class="center"></th>
                                                <th class="center" style="display: none">Id</th>
                                                <th>Nombre</th>
                                                <th>Fecha</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (attachments != null)
                                            {
                                                foreach (var attachment in attachments)
                                                {
                                                    <tr>
                                                        <td>@attachment.Id</td>
                                                        <td style="display: none">@attachment.Id</td>
                                                        <td class="text-uppercase">@Path.GetFileNameWithoutExtension(attachment.Path)</td>
                                                        <td>@attachment.RegisterDate</td>
                                                        <td class="center">
                                                            <a href="@Url.Action("AsyncPdfDownload", "FileManager", new { pdfPath = Html.Encode(attachment.Path) })" id="@attachment.Id" class="btn btn-sm btn-primary" name="DownloadAttachment" data-toggle="tooltip" data-placement="top" title="Selecciona para descargar el archivo"><span class="fa fa-download"></span></a>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th class="center"></th>
                                                <th class="center" style="display: none">Id</th>
                                                <th>Nombre</th>
                                                <th>Fecha</th>
                                                <th></th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
