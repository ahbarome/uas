@{
    var nonAttendanceCollection = ViewBag.NonAttendance as IEnumerable<UAS.Core.DAL.Common.Model.NonAttendanceView>;
}
<table id="grid-pending-excuse" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="center"></th>
            <th class="center" style="display: none">Id</th>
            <th class="center">Curso</th>
            <th># Documento</th>
            <th>Nombre</th>
            <th>Rol</th>
            <th>Fecha</th>
            <th>Horario</th>
            <th>Espacio</th>
            <th>¿Excusa?</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var nonAttendance in nonAttendanceCollection)
        {
            <tr>
                <td><input type="checkbox" class="i-checks" name="input[]"></td>
                <td style="display: none">@nonAttendance.Id</td>
                <td>@nonAttendance.CourseName</td>
                <td>@nonAttendance.DocumentNumber</td>
                <td>@nonAttendance.FullName</td>
                <td>@nonAttendance.RoleAlias</td>
                <td>@nonAttendance.NonAttendanceDate.ToString("yyyy-MM-dd")</td>
                <td>@{var scheduleDetail = string.Concat(@nonAttendance.StartTime, " - ", @nonAttendance.EndTime); @scheduleDetail}</td>
                <td>@{var spaceDetail = string.Concat(@nonAttendance.SpaceType, " ", nonAttendance.SpaceName); @spaceDetail}</td>
                <td class="center">No</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th class="center"></th>
            <th class="center" style="display: none">Id</th>
            <th class="center">Curso</th>
            <th># Documento</th>
            <th>Nombre</th>
            <th>Rol</th>
            <th>Fecha</th>
            <th>Horario</th>
            <th>Espacio</th>
            <th>¿Excusa?</th>
        </tr>
    </tfoot>
</table>