@using UAS.Core.DAL.Common.Model;

@model ExcuseApprovalView

@{
    var excuseCollection = ViewBag.Excuses as IEnumerable<ExcuseApprovalView>;
}
<table id="grid-approval-excuse" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="center"></th>
            <th class="center" style="display: none"></th>
            <th class="center" style="display: none"></th>
            <th class="center" style="display: none"></th>
            <th class="center" style="display: none"></th>
            <th class="center">Curso</th>
            <th># Documento</th>
            <th>Nombre</th>
            <th>Rol</th>
            <th>Fecha</th>
            <th>Horario</th>
            <th>Espacio</th>
            <th>¿Excusa?</th>
            <th class="center"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var excuse in excuseCollection)
        {
            <tr>
                <td><input type="checkbox" class="i-checks" name="input[]"></td>
                <td style="display: none">@excuse.Id</td>
                <td style="display: none">@excuse.IdExcuse</td>
                <td style="display: none">@excuse.IdNonAttendance</td>
                <td style="display: none">@excuse.IdRoleApprover</td>
                <td>@excuse.CourseName</td>
                <td>@excuse.TruantDocumentNumber</td>
                <td>@excuse.TruantFullName</td>
                <td>@excuse.TruantRoleAlias</td>
                <td>@excuse.NonAttendanceDate.ToString("yyyy-MM-dd")</td>
                <td>@{var scheduleDetail = string.Concat(@excuse.StartTime, " - ", @excuse.EndTime); @scheduleDetail}</td>
                <td>@{var spaceDetail = string.Concat(@excuse.SpaceType, " ", excuse.SpaceName); @spaceDetail}</td>
                <td class="center">Si</td>
                <td class="center">
                    <button id="@excuse.IdExcuse" class="btn btn-sm btn-primary" name="ExcuseDetail" data-toggle="tooltip" data-placement="top" title="Selecciona para consultar el detalle"><span class="fa fa-info-circle"></span></button>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th class="center"></th>
            <th class="center" style="display: none"></th>
            <th class="center" style="display: none"></th>
            <th class="center" style="display: none"></th>
            <th class="center" style="display: none"></th>
            <th class="center">Curso</th>
            <th># Documento</th>
            <th>Nombre</th>
            <th>Rol</th>
            <th>Fecha</th>
            <th>Horario</th>
            <th>Espacio</th>
            <th>¿Excusa?</th>
            <th class="center"></th>
        </tr>
    </tfoot>
</table>