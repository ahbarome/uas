@using UAS.Core.DAL.Common.Model;
@{
    var status = ViewBag.Status as IEnumerable<StatusByRoleView>;
    var SEPARATOR = "|";
}
<div class="modal inmodal" id="modal-approval-excuse-status-changer" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title text-uppercase">CAMBIAR ESTADO A</h4>
                <small class="font-bold">Por favor recuerda diligenciar todos los datos requeridos.</small>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form id="form-basic-information">
                            <div class="form-group">
                                <label>Estado <sup>*</sup></label>
                                <select class="form-control" name="IdStatusApproval">
                                    @if (status != null)
                                    {
                                        foreach (var stat in status)
                                        {
                                            var statValue = string.Concat(@stat.IdStatus, SEPARATOR, @stat.IsLast);
                                            <option value="@statValue">@stat.Status</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="form-group" style="display: none">
                                <label>Observación <sup>*</sup></label>
                                <textarea class="form-control" rows="5" name="ObservationApproval"></textarea>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary pull-right" id="btn-update-excuse-status">Actualizar</button>
            </div>
        </div>
    </div>
</div>
