@{
    var classifications = ViewBag.Classifications as IEnumerable<UAS.Core.DAL.Common.Model.Classification>;
    var SEPARATOR = "|";
}
<div class="modal inmodal" id="modal-excuse-creator" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title text-uppercase">Nueva Excusa</h4>
                <small class="font-bold">Por favor recuerda diligenciar todos los datos requeridos.</small>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div id="wizard" class="wizard-big">
                        <h1 class="text-uppercase"> General</h1>
                        <fieldset>
                            <div class="row">
                                <div class="col-lg-12">
                                    <form id="form-basic-information">
                                        <div class="form-group">
                                            <label>Clasificación <sup>*</sup></label>
                                            <select class="form-control" name="IdClassification">
                                                @if (classifications != null)
                                                {
                                                    foreach (var classification in classifications)
                                                    {
                                                        var classificationValue = string.Concat(@classification.Id, SEPARATOR, @classification.IsRequiredDescription);
                                                        <option value="@classificationValue">@classification.Classification1</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                        <div class="form-group" style="display: none">
                                            <label>Observación <sup>*</sup></label>
                                            <textarea class="form-control" rows="5" name="Observation"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label>Justificación <sup>*</sup></label>
                                            <textarea class="form-control" rows="10" name="Justification"></textarea>
                                        </div>
                                    </form>
                                </div>
                            </div>

                        </fieldset>
                        <h1 class="text-uppercase">Adjuntos</h1>
                        <fieldset>
                            <div class="row">
                                <div>
                                    <div class="m text-left"><small>Selecciona los archivos de soporte para la excusa</small> </div>
                                </div>
                                <form id="my-awesome-dropzone" class="dropzone" enctype="multipart/form-data">
                                    <div class="dropzone-previews"></div>
                                </form>
                                <div>
                                    <div class="m text-left"><small>Selecciona los archivos de soporte para la excusa</small> </div>
                                </div>
                            </div>
                        </fieldset>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
