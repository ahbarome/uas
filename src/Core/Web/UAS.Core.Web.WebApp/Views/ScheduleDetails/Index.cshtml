@model IEnumerable<UAS.Core.DAL.Common.Model.ScheduleDetail>

@{
    ViewBag.Title = "Detalle Programación de Cursos";
}

@functions{
    public static string GetDayName(int day)
    {
        switch(day)
        {
            case 1: return "Lunes";
            case 2: return "Martes";
            case 3: return "Miércoles";
            case 4: return "Jueves";
            case 5: return "Viernes";
            case 6: return "Sábado";
            default: return "Domingo";
        }
    }
}

<div id="wrapper">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-sm-4">
            <h2 class="text-uppercase">@ViewBag.Title</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="#">Administración</a>
                </li>
                <li class="active">
                    <strong>@ViewBag.Title</strong>
                </li>
            </ol>
        </div>
    </div>

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Listado Detalle Programación de Cursos</h5>
                        <div class="ibox-tools">
                            @Html.ActionLink("Crear", "Create", null, new { @class = "btn btn-primary" })
                        </div>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                    </th>
                                    <th>
                                        Curso
                                    </th>
                                    <th>
                                        Profesor
                                    </th>
                                    <th>
                                        Día Semana
                                    </th>
                                    <th>
                                        Horario
                                    </th>
                                    <th>
                                        Espacio
                                    </th>
                                    <th>
                                        Periodo
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Schedule.Course.Name)
                                        </td>
                                        
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Schedule.Teacher.Name) @Html.DisplayFor(modelItem => item.Schedule.Teacher.LastName)
                                        </td>
                                        
                                        <td>
                                            @GetDayName(item.DayOfTheWeek)
                                        </td>
                                        <td>
                                            @item.StartTime - @item.EndTime
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Space.SpaceType.Type) @Html.DisplayFor(modelItem => item.Space.Name)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Schedule.AcademicPeriod.Period)
                                        </td>
                                        
                                        <td>
                                            @Html.ActionLink("Detalle", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-white btn-sm" })
                                            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-white btn-sm" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                <th>
                                    </th>
                                    <th>
                                        Curso
                                    </th>
                                    <th>
                                        Profesor
                                    </th>
                                    <th>
                                        Día Semana
                                    </th>
                                    <th>
                                        Horario
                                    </th>
                                    <th>
                                        Espacio
                                    </th>
                                    <th>
                                        Periodo
                                    </th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    <script>
        $(document).ready(function () {
            var grid = $('.table').DataTable({
                language: {
                    url: '/Scripts/plugins/datatables/plugins/i18n/Spanish.txt'
                },
                "processing": true
            });
            
            // Add the row number
            grid.on('order.dt search.dt', function () {
                grid.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                    grid.cell(cell).invalidate('dom');
                });
            }).draw();
        });
    </script>
}
