@model UAS.Core.DAL.Common.Model.PagePermissionByRole

@{
    ViewBag.Title = "Permisos Páginas";
}


<div id="wrapper">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-sm-4">
            <h2 class="text-uppercase">@ViewBag.Title</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="#">Administración</a>
                </li>
                <li class="active">
                    <strong>@ViewBag.Title</strong>
                </li>
            </ol>
        </div>
    </div>
    
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Detalles Permisos Página</h5>
                    </div>
                    <div class="ibox-content">
    
    
    				    <dl class="dl-horizontal">
						 <dt>
                Página
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Page.Title)
            </dd>
    
            <dt>
                Rol
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Role.Name)
            </dd>
            <dt>
                ¿Defecto?
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.IsDefault)
            </dd>
    
            <dt>
                ¿Visible?
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.IsVisible)
            </dd>
    
            <dt>
                ¿Editar?
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.CanEdit)
            </dd>
    
            <dt>
                ¿Actualizar?
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.CanUpdate)
            </dd>
    
            <dt>
                ¿Listar?
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.CanSelect)
            </dd>
    
            <dt>
                ¿Eliminar?
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.CanDelete)
            </dd>
    
        </dl>
    
    
