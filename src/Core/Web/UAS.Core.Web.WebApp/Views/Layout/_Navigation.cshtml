@{
    var session = @ViewData["SESSION"] as UAS.Core.Session.Entities.Session;
}
@functions{

    public string MenuBuilder()
    {
        return "MENU";
    }
}

@helper MenuBuilder(List<UAS.Core.Session.Entities.Page> pages, int? parentId = null)
{
    <li class="@Html.IsSelected(controller: "Sample")">
        <a href="@Url.Action("Sample", "Sample")"><i class="fa fa-th-large"></i> <span class="nav-label" data-i18n="nav.dashboard">Sample</span> <span class="fa arrow"></span></a>
        <ul class="nav collapse @Html.IsSelected(controller: "Sample", cssClass: "in")">

            @foreach (var page in pages.Where(item => item.ParentId == parentId))
            {
                <li class="@Html.IsSelected(action: "Sample")">
                    <a href="@Url.Content(@page.MenuItem)">
                        <i class="@page.IconClass"></i>@page.Title
                    </a>

                    @MenuBuilder(pages, page.IdPage)
                </li>
            }
        </ul>
    </li>
}

<nav class="navbar-default navbar-static-side" role="navigation">
    <div class="sidebar-collapse">
        <ul class="nav" id="side-menu">
            <li class="nav-header">
                <div class="dropdown profile-element">
                    <span>
                        <img alt="image" class="img-circle" src="~/Images/profile_small.jpg" />
                    </span>
                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                        <span class="clear">
                            <span class="block m-t-xs">
                                <strong class="font-bold">@Html.Raw(session.SessionUser.FullName)</strong>
                            </span> <span class="text-muted text-xs block">@Html.Raw(session.SessionUser.RoleName) <b class="caret"></b></span>
                        </span>
                    </a>
                    <ul class="dropdown-menu animated fadeInRight m-t-xs">
                        <li><a href="@Url.Action("Profile", "AppViews")">@MenuBuilder()</a></li>
                        <li><a href="@Url.Action("Contacts", "AppViews")">Contacts</a></li>
                        <li><a href="@Url.Action("Inbox", "Mailbox")">Mailbox</a></li>
                        <li class="divider"></li>
                        <li><a href="@Url.Action("Logout", "Account")">Logout</a></li>
                    </ul>
                </div>
                <div class="logo-element">
                    UAS+
                </div>
            </li>
            @MenuBuilder(session.SessionUser.Pages)
        </ul>
    </div>
</nav>